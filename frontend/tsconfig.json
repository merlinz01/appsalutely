{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true,
    "strict": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
